	static int change(int num , int a) {
		if(num > 0 ) {
			num /= a;
			System.out.println("in");
			return change(num%a , a);
		}
		System.out.println("out");
		return 0;
	}
	public static void main(String[] args) {
		System.out.println(change(45,3));
	}
