package number2;

class Solution {
    public String solution(String number, int k) {
        
        StringBuilder sb = new StringBuilder();
        
        char max;
        
        int n = number.length() - k;
        
        for(int i = 0 ; i < n; i++) {  //필요한 자릿수만큼반복 실행
        	max = '0';
        	for(int j = i; j <= n + i ;j++ ) {		//
        		if(max < number.charAt(j)) {
        			max = number.charAt(j);
        			sb.append(max);
        		}
        	}
        }
        
        return sb.toString();
    }
}